DROP TABLE IF EXISTS "waves";
CREATE TABLE "waves" (
	"id" BIGINT,
	"space_id" BIGINT,
	"sender_id" BIGINT,
	"content" VARCHAR(256),
	"created_at" TIMESTAMP DEFAULT CURRENT_TIMESTAMP,

	CONSTRAINT "fk_wave__space"
		FOREIGN KEY ("space_id")
			REFERENCES "spaces"("id")
				ON DELETE CASCADE,

	PRIMARY KEY ("id")
);