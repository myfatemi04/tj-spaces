DROP TABLE IF EXISTS "media";

CREATE TYPE "media_type" AS ENUM ('video', 'image', 'audio', 'file');

CREATE TABLE "media" (
	"id" BIGINT,
	"creator_id" BIGINT,
	"datacenter" VARCHAR(255),
	"type" "media_type", -- 'video'

	CONSTRAINT "fk_media__creator"
		FOREIGN KEY ("creator_id")
			REFERENCES "users"("id")
				ON DELETE CASCADE,

	PRIMARY KEY ("id")
);